<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iVItem"
        android:layout_width="@dimen/dialog_maker_item_image_size"
        android:layout_height="@dimen/dialog_maker_item_image_size"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/dialog_maker_large_size" />

    <TextView
        android:id="@+id/tVItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_maker_large_size"
        android:layout_marginTop="@dimen/dialog_maker_large_size"
        android:layout_weight="1" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cBItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_maker_large_size" />
</LinearLayout>