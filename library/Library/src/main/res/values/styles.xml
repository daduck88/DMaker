<resources>

    <style name="DialogTheme" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:datePickerStyle">@style/DatePickerTheme</item>
        <item name="android:timePickerStyle">@style/TimePickerTheme</item>
    </style>

    <style name="dialog_maker_tittle_style">
        <item name="android:textSize">@dimen/dialog_maker_title_size</item>
        <item name="android:paddingTop">@dimen/dialog_maker_title_padding_size</item>
        <item name="android:paddingLeft">@dimen/dialog_maker_title_padding_size</item>
        <item name="android:paddingRight">@dimen/dialog_maker_title_padding_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="dialog_maker_content_style">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dialog_maker_content_padding_top</item>
        <item name="android:paddingLeft">@dimen/dialog_maker_content_padding</item>
        <item name="android:paddingRight">@dimen/dialog_maker_content_padding</item>
        <item name="android:paddingBottom">@dimen/dialog_maker_content_padding</item>
    </style>

    <style name="dialog_maker_action_area_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dialog_maker_action_area_height</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/dialog_maker_medium_size</item>
    </style>

    <style name="dialog_maker_button_style">
        <item name="android:textSize">@dimen/dialog_maker_button_text_size</item>
        <item name="android:paddingLeft">@dimen/dialog_maker_medium_size</item>
        <item name="android:paddingRight">@dimen/dialog_maker_medium_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="DatePickerTheme" parent="android:Widget.Material.DatePicker">
    </style>

    <style name="TimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
    </style>

</resources>
